apiVersion: apps/v1
kind: Deployment
metadata: 
  name: < app-name >
spec:
  replicas: < 1 >
  selector:
    matchLabels:
       app: < name >
  template:
    metadata:
      lables:
        app: < name >
    spec:
      containers:
      - name: < name the container >
        image: < image-name >
        ports:
        - containerPort: 5000
---
apiVersion: v1
kind: Service
metadata:
  name: < name >
spec:
  type: NodePort
  ports:
  - port: 80
    targetPort: 5000
    modeport: 32000
  selector:
    app: < app name >
